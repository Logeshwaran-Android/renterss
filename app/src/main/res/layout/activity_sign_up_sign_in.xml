<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.ui.signUpSignInPage.SignUpSignInActivity"
    android:background="@color/white"

    >
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        >

   <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:textColor="@color/text_black"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <ImageView
        android:id="@+id/ivAppImg"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_marginTop="@dimen/default_extra_large_margin"
        android:layout_marginStart="@dimen/default_medium_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:src="@drawable/ic_logo_transparent"
        android:contentDescription="@string/app_name"/>
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivAppImg"
        app:layout_constraintStart_toStartOf="@+id/ivAppImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:text="@string/welcome_to_Renters"
        app:layout_constraintHorizontal_bias="0.0"
        android:gravity="start"
        android:textColor="@color/welcome_app_color"
        android:textSize="@dimen/extra_large_text_size"
        android:layout_marginTop="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        />


        <com.rent.renters.mylibrary.widgets.CustomButtonRegular
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_google"
            android:paddingStart="@dimen/default_extra_large_margin"
            android:paddingEnd="@dimen/default_extra_large_margin"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/login_with_google"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:background="@drawable/welcome_appcolor_curve_button"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:layout_marginStart="@dimen/default_medium_margin"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            />

    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_curve_button"
        android:layout_marginRight="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:layout_marginLeft="@dimen/default_medium_margin"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:gravity="center"
        android:textSize="@dimen/medium_text_size"
        android:text="@string/create_account"
        android:textAllCaps="false"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@+id/btnGoogle"
        android:layout_marginTop="@dimen/default_extra_large_margin"
        />
    <com.rent.renters.mylibrary.widgets.CustomTextViewLight
        android:id="@+id/tvTermsAndPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_medium_margin"
        android:paddingEnd="@dimen/default_medium_margin"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/default_extra_large_margin"
        android:layout_marginBottom="@dimen/default_extra_large_margin"
        android:textColor="@color/text_black"
        android:text="@string/agree_terms_privacy_policy"
        android:textSize="@dimen/micro_text_size"
        />






</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>