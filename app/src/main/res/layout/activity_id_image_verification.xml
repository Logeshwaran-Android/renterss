<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ui.verification.IDImageVerificationActivity">
    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout" />
    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
        android:id="@+id/tvIDTitle"
        android:textColor="@color/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/upload_img_id_card"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_margin="@dimen/default_medium_margin"
        />
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvUploadImgDesc"
        android:textColor="@color/text_black"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/text_view_padding"
        android:paddingBottom="@dimen/text_view_padding"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/default_small_margin"
        android:text="@string/upload_id_desc"
        android:textSize="@dimen/medium_text_size"
        android:layout_margin="@dimen/default_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/tvIDTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_medium_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUploadImgDesc"
        app:layout_constraintVertical_bias="0.0"
        android:weightSum="2">

    <ImageView
        android:id="@+id/ivFrontImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/default_small_margin"
        app:srcCompat="@drawable/ic_card_front_text"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/ivBackImage"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/default_small_margin"
        android:layout_height="match_parent"
       android:layout_weight="1"
        app:srcCompat="@drawable/ic_card_back_text"
        android:scaleType="centerCrop"/>
    </LinearLayout>


        <com.rent.renters.mylibrary.widgets.CustomButton
            android:id="@+id/btnProceedToVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/default_medium_margin"
            android:background="@drawable/rectangle_curve_button"

            app:layout_constraintHorizontal_bias="1.0"
            android:gravity="center"
            android:paddingStart="@dimen/drawable_padding"
            android:paddingEnd="@dimen/drawable_padding"
            android:text="@string/proceed_to_verify"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>