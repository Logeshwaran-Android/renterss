<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_medium_margin"
        >
        <com.rent.righspace.mylibrary.widgets.CircleImageView
            android:id="@+id/ivInboxProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:src="@drawable/ic_empty_space"
            />
        <com.rent.righspace.mylibrary.widgets.CustomTextView
            android:id="@+id/tvInboxName"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@+id/ivInboxProfile"
            android:layout_toStartOf="@+id/tvInboxStatus"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:text="John"
            android:textSize="@dimen/medium_text_size"/>
        <com.rent.righspace.mylibrary.widgets.CustomTextViewLight
            android:id="@+id/tvInboxTime"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@+id/ivInboxProfile"
            android:layout_toStartOf="@+id/tvInboxStatus"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:layout_below="@+id/tvInboxName"
            android:textSize="@dimen/micro_text_size"
            android:text="1 week ago"/>
        <com.rent.righspace.mylibrary.widgets.CustomTextView
            android:id="@+id/tvInboxMsg"
            android:textColor="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@+id/ivInboxProfile"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:layout_below="@+id/tvInboxTime"
            android:text="Lorem ipsum.."/>
        <com.rent.righspace.mylibrary.widgets.CustomTextView
            android:id="@+id/tvInboxStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Accepted"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_green"
            android:visibility="gone"
            android:layout_alignParentEnd="true"/>
        <com.rent.righspace.mylibrary.widgets.CustomTextViewLight
            android:id="@+id/tvInboxPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/tvInboxStatus"
            android:layout_alignParentEnd="true"
            android:text="1 Aug - 3 Aug"
            android:textSize="@dimen/micro_text_size"
            android:visibility="gone"
            android:textColor="@color/text_black"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_color"
        android:layout_below="@+id/rlTopLayout"
        android:layout_marginStart="@dimen/default_large_margin"
        android:layout_marginEnd="@dimen/default_large_margin"

        />
</RelativeLayout>