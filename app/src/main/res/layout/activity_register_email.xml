<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >


    <RelativeLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/emailHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_transparent_color">


        <ImageButton
            android:id="@+id/imgBtnBack"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/back_button_padding"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_arrow_back_black" />

    </RelativeLayout>





    <com.rent.renters.mylibrary.widgets.CustomTextViewSemiBold
            android:id="@+id/tvEmailHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/welcome_app_color"
            android:text="@string/your_email"
            android:textSize="@dimen/extra_large_text_size"
android:layout_marginTop="@dimen/default_medium_margin"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:layout_marginBottom="@dimen/default_medium_margin"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailHeaderLayout"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_medium_margin"
            android:hint="@string/email_address"
            android:imeOptions="actionNext"
            android:textColorHint="@color/text_black"
            android:theme="@style/TextLabel"
            app:hintTextAppearance="@style/TextLabelHint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailHeader"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="@dimen/default_large_margin">

            <com.rent.renters.mylibrary.widgets.CustomEdittext
                android:id="@+id/etEmail"
                android:maxLines="1"
                android:background="@drawable/text_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:maxLength="50"
                android:paddingTop="@dimen/material_text_view_padding"
                android:paddingEnd="@dimen/text_view_padding"
                android:textSize="@dimen/small_text_size"
                android:paddingBottom="@dimen/material_text_view_padding"
                android:singleLine="true"
                android:textColor="@color/text_black" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.rent.renters.mylibrary.widgets.CustomTextViewLight
            android:id="@+id/tvEmailDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/email_description"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_black"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switchCheckPolicy"
            android:layout_marginStart="@dimen/default_medium_margin"
            android:layout_marginTop="@dimen/default_medium_margin"
            app:layout_constraintHorizontal_bias="0.0"
            />
        <Switch
            android:id="@+id/switchCheckPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_thumb_bg"
            android:track="@drawable/track_selector"
            app:layout_constraintStart_toEndOf="@+id/tvEmailDesc"
            app:layout_constraintTop_toTopOf="@+id/tvEmailDesc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/default_small_margin"
            android:switchMinWidth="30dp"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:layout_alignParentEnd="true"
            android:textColor="#00000000"/>



        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="@dimen/next_icon_size"
            android:layout_height="@dimen/next_icon_size"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_next_circle_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_medium_margin"
            android:layout_marginBottom="@dimen/default_extra_large_margin"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>