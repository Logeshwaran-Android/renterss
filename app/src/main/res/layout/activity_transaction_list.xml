<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.ui.reservations.ReservationsFragment"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clickable="true">
    <include
        layout="@layout/header_layout"
        android:id="@+id/headerLayout"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRequestEarnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:visibility="gone">

    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvEarnings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:layout_margin="@dimen/default_medium_margin"
        android:textSize="@dimen/medium_text_size"
        android:text="@string/earnings"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvEarningsVal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:textAllCaps="false"
        android:layout_margin="@dimen/default_medium_margin"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toEndOf="@+id/tvEarnings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEarnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clRequestEarnings"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:visibility="gone">

    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvTotalEarnings"
        android:background="@null"
        android:textColor="@color/text_black"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_text_height"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:textSize="@dimen/medium_text_size"
        android:text="@string/total_earnings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvTotalEarningsVal"
        android:background="@null"
        android:textColor="@color/text_black"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_text_height"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:layout_marginStart="@dimen/default_small_margin"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toEndOf="@+id/tvTotalEarnings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvMonthEarnings"
        android:background="@null"
        android:textColor="@color/text_black"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_text_height"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:textSize="@dimen/medium_text_size"
        android:text="@string/total_earnings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalEarnings"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvMonthEarningVal"
        android:background="@null"
        android:textColor="@color/text_black"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_text_height"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:layout_marginStart="@dimen/default_small_margin"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toEndOf="@+id/tvMonthEarnings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalEarningsVal"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rlFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:layout_marginTop="@dimen/default_small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clEarnings"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0">

        <com.rent.renters.mylibrary.widgets.CustomEdittext
            android:id="@+id/tvSearch"
            android:textColor="@color/text_black"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imgBtnFilter"
            android:background="@drawable/search_edit_text"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:hint="@string/search_transaction"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/small_text_size"/>

        <ImageButton
            android:id="@+id/imgBtnFilter"
            android:background="@color/white"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/default_medium_margin"
            android:src="@drawable/ic_filter" />
        <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/imgBtnFilter"
            android:visibility="gone">
            <com.rent.renters.mylibrary.widgets.CustomTextView
                android:id="@+id/tvStartDate"
                android:textColor="@color/text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_edittext"
                android:padding="@dimen/text_view_padding"
                android:layout_marginEnd="2dp"
                android:hint="@string/start_date"
                android:layout_weight="1"/>
            <com.rent.renters.mylibrary.widgets.CustomTextView
                android:id="@+id/tvEndDate"
                android:textColor="@color/text_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_edittext"
                android:padding="@dimen/text_view_padding"
                android:layout_marginStart="2dp"
                android:hint="@string/end_date"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactionList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llBottomLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlFilter"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <include
        android:id="@+id/noDataLayout"
        layout="@layout/no_data_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clEarnings"
        android:layout_marginTop="@dimen/default_extra_large_margin"
         />

    <LinearLayout
        android:id="@+id/llBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:visibility="gone">

        <com.rent.renters.mylibrary.widgets.CustomButton
            android:id="@+id/btnRequestEarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_medium_margin"
            android:background="@drawable/rectangle_curve_button"
            android:gravity="center"
            android:text="@string/request_earning"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>