<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.ui.verification.ConfirmPhoneNumberActivity">
    <include
        layout="@layout/header_layout"
        android:id="@+id/headerLayout"/>


    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
        android:id="@+id/tvPropertyName"
        android:textColor="@color/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_medium_margin"
        android:text="@string/confirm_your_phone_number"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        />

    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvPhoneDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_medium_margin"
        android:textColor="@color/text_black"
        android:text="@string/phone_number_desc"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPropertyName"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.rent.renters.mylibrary.widgets.CustomTextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_medium_margin"
        android:text="@string/phone"
        android:textAllCaps="true"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneDesc"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.hbb20.CountryCodePicker
        android:id="@+id/ccpCountryCode"
        android:layout_width="wrap_content"
        app:ccp_showPhoneCode="true"
        app:ccp_showNameCode="false"
        app:ccp_showFlag="false"
        app:ccp_showArrow="false"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_medium_margin"
        app:ccp_textSize="@dimen/medium_text_size"
        android:background="@color/chat_gray"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/viewPhone"
        app:layout_constraintBottom_toBottomOf="@+id/viewPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        app:layout_constraintHorizontal_bias="0.0"/>

    <View
        android:id="@+id/viewPhone"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:layout_marginTop="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:layout_marginBottom="@dimen/default_medium_margin"
        android:background="@color/light_gray_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ccpCountryCode"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"/>

    <com.rent.renters.mylibrary.widgets.CustomEdittext
        android:id="@+id/etPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_margin="@dimen/default_medium_margin"
        android:hint="@string/phone_number"
        android:maxLength="16"
        android:gravity="start"
        android:inputType="number"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@+id/viewPhone"
        app:layout_constraintBottom_toBottomOf="@+id/viewPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewPhone"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        app:layout_constraintHorizontal_bias="0.0"/>

    <View
        android:id="@+id/viewPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:layout_marginTop="@dimen/default_small_margin"
        android:background="@color/light_gray_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPhone"
        app:layout_constraintVertical_bias="0.0" />
    <com.rent.renters.mylibrary.widgets.CustomButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_curve_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/default_medium_margin"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:paddingStart="@dimen/drawable_padding"
        android:paddingEnd="@dimen/drawable_padding"
        android:drawableEnd="@drawable/ic_next_arrow_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>