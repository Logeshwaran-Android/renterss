<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
   >
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSpaceType"
        android:layout_width="@dimen/space_type_image_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="@dimen/default_small_margin"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        android:background="@color/white"
        >
    <LinearLayout
        android:id="@+id/linLaySpaceType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/ivSpaceType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_type_image_height"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <com.rent.renters.mylibrary.widgets.CustomTextViewSemiBold
        android:id="@+id/tvSpaceType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="@dimen/text_view_padding"
        android:maxLines="2"
        android:gravity="start|center"
        android:ellipsize="end"
        android:textColor="@color/text_black"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>