<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".app.ui.verification.TrustAndVerificationActivity">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvIdVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_medium_margin"
        android:layout_marginStart="@dimen/default_medium_margin"
        android:layout_marginEnd="@dimen/default_medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_small_margin"
            android:layout_marginEnd="@dimen/default_small_margin"
            android:layout_marginTop="@dimen/default_small_margin"
            android:orientation="vertical">

            <com.rent.renters.mylibrary.widgets.CustomTextViewSemiBold
                android:id="@+id/tvBeReady"
                android:textColor="@color/text_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_small_margin"
                android:text="@string/be_ready"
                android:textSize="@dimen/medium_text_size" />

            <com.rent.renters.mylibrary.widgets.CustomTextViewLight
                android:id="@+id/tvProvideId"
                android:textColor="@color/text_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_medium_margin"
                android:lineSpacingExtra="@dimen/default_small_margin"
                android:text="@string/provide_id_for_verification"
                android:textSize="@dimen/medium_text_size" />

            <com.rent.renters.mylibrary.widgets.CustomButton
                android:id="@+id/btnProvideID"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_medium_margin"
                android:background="@drawable/rectangle_curve_button"
                android:text="@string/provide_id"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/default_medium_margin"
                android:layout_marginBottom="@dimen/default_medium_margin"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/ivFrontImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/default_small_margin"
                    app:srcCompat="@drawable/ic_card_front"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/ivBackImage"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/default_small_margin"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_card_back"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvVerifiedInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvIdVerification"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/default_medium_margin">
                    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
                        android:id="@+id/tvVerifiedInfo"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bottom_line"
                        android:text="@string/your_verified_info"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/drawable_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
                        android:visibility="gone"
                        android:textColor="@color/text_black"
                        android:id="@+id/tvEmailVerified"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_small_margin"
                        android:background="@null"
                        android:text="@string/email"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewLight
                        android:visibility="gone"
                        android:textColor="@color/text_black"
                        android:id="@+id/tvEmailVerifiedInfo"
                        android:layout_width="match_parent"
                        android:lineSpacingExtra="@dimen/default_small_margin"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_small_margin"
                        android:layout_marginEnd="@dimen/default_small_margin"
                        android:background="@null"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
                        android:id="@+id/tvPhoneVerified"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_small_margin"
                        android:background="@null"
                        android:text="@string/phone_number"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewLight
                        android:id="@+id/tvPhoneVerifiedInfo"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/default_small_margin"
                        android:layout_marginStart="@dimen/default_small_margin"
                        android:layout_marginEnd="@dimen/default_small_margin"
                        android:background="@null"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvNotVerifiedInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvVerifiedInfo"
                app:layout_constraintVertical_bias="0.0"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardElevation="@dimen/card_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/default_medium_margin">
                    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
                        android:id="@+id/tvNotVerifiedInfo"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bottom_line"
                        android:text="@string/not_yet_verified"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/drawable_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
                        android:id="@+id/tvEmailNotVerified"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_small_margin"
                        android:background="@null"
                        android:text="@string/email"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewLight
                        android:id="@+id/tvEmailNotVerifiedInfo"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/default_small_margin"
                        android:layout_marginStart="@dimen/default_small_margin"
                        android:layout_marginEnd="@dimen/default_small_margin"
                        android:background="@null"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_margin="@dimen/default_medium_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvNotVerifiedInfo"
                app:layout_constraintVertical_bias="0.0"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardElevation="@dimen/card_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/default_medium_margin">
                    <com.rent.renters.mylibrary.widgets.CustomTextViewBold
                        android:id="@+id/tvGoogle"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_small_margin"
                        android:background="@null"
                        android:text="@string/google"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomTextViewLight
                        android:id="@+id/tvCoonectGoogle"
                        android:textColor="@color/text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_small_margin"
                        android:layout_marginEnd="@dimen/default_small_margin"
                        android:background="@null"
                        android:lineSpacingExtra="@dimen/default_small_margin"
                        android:text="@string/connect_your_google_account"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>
                    <com.rent.renters.mylibrary.widgets.CustomButton
                        android:id="@+id/btnConnectGoogle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_small_margin"
                        android:background="@drawable/rectangle_curve_button"
                        android:textColor="@color/text_white"
                        android:text="@string/connect"
                        android:textAllCaps="false"
                        android:textSize="@dimen/medium_text_size"
                        android:padding="@dimen/text_view_padding"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>